<div class="main user-show">
  <div class="container">
    <div class="user">
      <h2><%=@user.name %></h2>
      <p><%=@user.email %></p>

      <% if @user.id == @current_user.id %>
      <div class="edit_btn">  <%= link_to("編集", "/users/#{@user.id}/edit") %> </div>
      <% end %>

        <table>
          <tr>
            <th>追加日</th>
            <th>タイトル</th>
            <th>コメント</th>
            <th>評価</th>
          </tr>

        <% @user.movies.each do |movie| %>
          <tr>
            <td><%= movie.add_date %></td>
            <td><%= movie.title %> </td>
            <td><%= movie.feelings %></td>
            <td>
              <div class="evaluation">
                <% i=0 %>
                <% while i < movie.rating do %>
                <div class="star">
                  <%='★' %>
                </div>
                <% i+=1 %>
                <% end %>
              </div>
            </td>
          </tr>
        <% end %>

      </table>
    </div>
  </div>
</div>
