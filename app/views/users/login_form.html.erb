<div class="main users-new">
  <div class="container">
    <div class="login_form-box">
    <div class="loginform-heading">ログイン</div>
    <div class="loginform">
      <div class="loginform-body">

       <% if @error_message %>
          <div class="login_form-error">
            <%= @error_message %>
          </div>
        <% end %>

        <%= form_tag("/login") do %>
          <p>メールアドレス</p>
        <div class = "login_form-input"> <input name="email" value="<%= @email %>"> </div>
          <p>パスワード</p>
        <div class = "login_form-input"> <input type="password" name="password" value="<%= @password %>"> </div>
        <div class = "login_form-input"> <input type="submit" value="ログイン"></div>
        <% end %>

      </div>
    </div>
  </div>
  </div>
</div>
