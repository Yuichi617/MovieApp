<div class="main movie-index">
  <div class="container">

    <table>
      <tr>
        <th>追加日</th>
        <th>タイトル</th>
        <th>コメント</th>
        <th>評価</th>
      </tr>

      <% @movies.each do |movie| %>
      <tr class = "main_table" onclick= 'window.location=" <%= "/movie/#{movie.id}" %>"' role="link">
        <td><%= movie.add_date %></td>
        <td><%= movie.title %>   </td>
        <td><%= movie.feelings %></td>
        <td>
           <div class="evaluation">
             <% i=0 %>
             <% while i < movie.rating do %>
             <div class="star">
             <%='★' %>
             </div>
             <% i+=1 %>
             <% end %>
           </div>
        </td>

      </tr>
      <% end %>

    </table>
    <a class="fas fa-plus plus" href="/movie/new"></a>
  </div>
</div>
